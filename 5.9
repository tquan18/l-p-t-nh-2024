def binary_search(arr, x):
    """
    Hàm tìm kiếm nhị phân trong danh sách arr.
    Trả về True nếu tìm thấy, False nếu không tìm thấy.
    """
    left = 0
    right = len(arr) - 1

    while left <= right:
        mid = left + (right - left) // 2

        # Kiểm tra nếu x nằm ở giữa
        if arr[mid] == x:
            return True
        
        # Nếu x lớn hơn, bỏ qua nửa trái
        elif arr[mid] < x:
            left = mid + 1
        
        # Nếu x nhỏ hơn, bỏ qua nửa phải
        else:
            right = mid - 1
    return False

