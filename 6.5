class ReverseString:
    def __init__(self, chuoi):
        """
        Hàm khởi tạo để xây dựng đối tượng ReverseString từ chuỗi.
        :param chuoi: Chuỗi cần đảo ngược từ từng chữ.
        """
        self.chuoi = chuoi

    def dao_nguoc_tu(self):
        """
        Hàm đảo ngược từng từ trong chuỗi.
        :return: Chuỗi với các từ đã được đảo ngược.
        """
        tu_dao_nguoc = [tu[::-1] for tu in self.chuoi.split()]
        return ' '.join(tu_dao_nguoc)

chuoi_dau_vao = 'hello .py'
