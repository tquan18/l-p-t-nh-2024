def sap_xep_danh_sach(danh_sach):
    """Hàm sắp xếp danh sách theo thứ tự tăng dần."""
    return sorted(danh_sach)

def tim_phan_tu_lon_nhat(danh_sach):
    """Hàm tìm phần tử lớn nhất trong danh sách."""
    return max(danh_sach)

def tim_phan_tu_nho_nhat(danh_sach):
    """Hàm tìm phần tử nhỏ nhất trong danh sách."""
    return min(danh_sach)

def vi_tri_phan_tu_lon_nhat(danh_sach):
    """Hàm tìm vị trí của phần tử lớn nhất trong danh sách."""
    max_value = tim_phan_tu_lon_nhat(danh_sach)
    return danh_sach.index(max_value)

def vi_tri_phan_tu_nho_nhat(danh_sach):
    """Hàm tìm vị trí của phần tử nhỏ nhất trong danh sách."""
    min_value = tim_phan_tu_nho_nhat(danh_sach)
    return danh_sach.index(min_value)

