# Định nghĩa hàm để kiểm tra số chẵn hoặc số lẻ
def kiem_tra_chan_le(number):
    if number % 2 == 0:
        print(f"{number} là số chẵn")
    else:
        print(f"{number} là số lẻ")

# Nhập số từ bàn phím
try:
    so = int(input("Nhập một số nguyên: "))
    kiem_tra_chan_le(so)
except ValueError:
    print("Giá trị nhập vào không hợp lệ. Vui lòng nhập một số nguyên.")
